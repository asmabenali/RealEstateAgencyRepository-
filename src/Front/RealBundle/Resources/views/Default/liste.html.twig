{% extends "FrontRealBundle::layout.html.twig" %}

{% block titre %} {{type}} {% endblock %}

{% block container %}

    <div class="doc-bd" id="doc-bd">

        <div class="b12">
            <div class="u12">
                <div class="mod mod-bevel mod-bevel-med breadcrumb" id="breadcrumb">
                    <div class="inner">
                        <div class="bd">
                            <ul class="font-narrow">
                                
                                
                                <li class="first"><a href="{{ path('front_real_homepage')}}">Accueil</a></li>
                                <li class="last"><a href="{{ path('front_real_liste',{'type' : type })}}">{{type}}</a></li>
                            </ul>
                        </div>
                    </div>
                </div><!-- / #breadcrumb -->
            </div>
        </div>


        {% for entity in entities %}
            <div class="b12">

                <div class="u6">

                    <div class="mod mod-bevel mod-bevel-light">
                        <div class="inner portfolio-item">
                            <div class="bd">
                                <a href="{{path('front_real_detail',{'id':entity.idOffre})}}">
                                    <img src="{{ asset('img/offre/'~entity.url~'')}}" alt="" style="width: 100%; height: 194px;" />
                                </a>
                            </div>
                        </div>
                    </div>

                </div>
                <div class="u6">

                    <div class="mod mod-clean">
                        <div class="inner">
                            <div class="bd">
                                <h3>{{entity.nature}} à {{entity.ville.ville}} </h3>
                                <p>{{ entity.description|truncate(50, true) }}</p>
                                <ul class="arrow-list">
                                    <li><b>Date : </b>{{ entity.datepublication|date('d/m/y') }}</li>
                                    <li><b>Prix : </b>{{ entity.prix |number_format(2, '.', ',') }}</li>
                                    
                                    
                                </ul>
                                <a href="{{path('front_real_detail',{'id':entity.idOffre})}}" class="jbtn jbtn-small-normal jbtn-margin-small">Plus de détails</a>
                            </div>
                        </div>
                    </div>

                </div>

            </div>
        {% endfor %}
    </div>

{% endblock %}