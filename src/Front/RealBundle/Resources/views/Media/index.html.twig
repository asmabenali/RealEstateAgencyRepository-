{% extends '::base.html.twig' %}

{% block body -%}
    <h1>Media list</h1>

    <table class="records_list">
        <thead>
            <tr>
                <th>Idmedia</th>
                <th>Url</th>
                <th>Libelle</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for entity in entities %}
            <tr>
                <td><a href="{{ path('media_show', { 'id': entity.idMedia }) }}">{{ entity.idMedia }}</a></td>
                <td>{{ entity.url }}</td>
                <td>{{ entity.libelle }}</td>
                <td>
                <ul>
                    <li>
                        <a href="{{ path('media_show', { 'id': entity.idMedia }) }}">show</a>
                    </li>
                    <li>
                        <a href="{{ path('media_edit', { 'id': entity.idMedia }) }}">edit</a>
                    </li>
                </ul>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

        <ul>
        <li>
            <a href="{{ path('media_new') }}">
                Create a new entry
            </a>
        </li>
    </ul>
    {% endblock %}
