        </tbody>
    </table>

        <ul class="record_actions">
    <li>
        <a href="{{ path('comptes') }}">
            Back to the list
        </a>
    </li>
    <li>
        <a href="{{ path('comptes_edit', { 'id': entity.idCompte }) }}">
            Edit
        </a>
    </li>
    <li>{{ form(delete_form) }}</li>
</ul>
{% endblock %}
