{% extends '::base.html.twig' %}

{% block body -%}
    <h1>Visite list</h1>

    <table class="records_list">
        <thead>
            <tr>
                <th>Idvisite</th>
                <th>Datedde</th>
                <th>Etat</th>
                <th>Confirmation</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for entity in entities %}
            <tr>
                <td><a href="{{ path('visite_show', { 'id': entity.idVisite }) }}">{{ entity.idVisite }}</a></td>
                <td>{% if entity.dateDde %}{{ entity.dateDde|date('Y-m-d H:i:s') }}{% endif %}</td>
                <td>{{ entity.etat }}</td>
                <td>{{ entity.confirmation }}</td>
                <td>
                <ul>
                    <li>
                        <a href="{{ path('visite_show', { 'id': entity.idVisite }) }}">show</a>
                    </li>
                    <li>
                        <a href="{{ path('visite_edit', { 'id': entity.idVisite }) }}">edit</a>
                    </li>
                </ul>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

        <ul>
        <li>
            <a href="{{ path('visite_new') }}">
                Create a new entry
            </a>
        </li>
    </ul>
    {% endblock %}
